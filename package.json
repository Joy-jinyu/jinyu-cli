{
  "name": "baas-explorer",
  "version": "0.0.1",
  "description": "baas-explorer",
  "keywords": [
    "SSR",
    "react",
    "react-router",
    "vite",
    "koa"
  ],
  "scripts": {
    "dev": "dotenv -e .env.development nodemon --watch src/server/index.ts --exec ts-node src/server/index.ts",
    "pm2:dev": "pm2 start pm2.config.js --env dev",
    "build": "yarn build:client && yarn build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/server/entry-server.tsx",
    "pm2:uat": "pm2 start pm2.config.js --env uat",
    "pm2:prod": "pm2 start pm2.config.js --env prod",
    "prerender": "vite build --outDir dist/static && yarn build:server && ts-node prerender",
    "tsc": "tsc --noEmit",
    "lint": "yarn tsc && yarn lint:script && yarn lint:style",
    "lint:script": "eslint --ext .tsx,.ts,.js,.jsx ./src ./prerender.ts ./src/server/index.ts",
    "lint-fix:script": "yarn lint:script -- --fix",
    "lint:style": "stylelint \"src/**/*.less\" ",
    "lint-fix:style": "yarn lint:style -- --fix"
  },
  "dependencies": {
    "@ant-design/charts": "^1.4.2",
    "@ant-design/icons": "^4.7.0",
    "@emotion/react": "^11.10.4",
    "@koa/cors": "^4.0.0",
    "@mantine/core": "^5.4.2",
    "@mantine/hooks": "^5.4.2",
    "@reduxjs/toolkit": "^1.8.5",
    "antd": "^4.23.4",
    "axios": "^1.1.2",
    "child_process": "^1.0.2",
    "cross-env": "^7.0.3",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-connect": "^2.1.0",
    "koa-router": "^12.0.0",
    "koa-static": "^5.0.0",
    "moment": "^2.29.4",
    "nodemon": "^2.0.16",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.6",
    "@types/glob": "^8.0.0",
    "@types/koa": "^2.13.5",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/koa__cors": "^3.3.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "@vitejs/plugin-react": "^1.3.0",
    "colors": "^1.4.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "less": "^4.1.3",
    "postcss-less": "^6.0.0",
    "postcss-preset-env": "^7.8.2",
    "prettier": "^2.7.1",
    "typescript": "^4.6.3",
    "vite": "^2.9.9"
  },
  "author": "wqhui",
  "license": "MIT"
}